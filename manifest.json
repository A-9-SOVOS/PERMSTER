// === manifest.json ===
// Save this as manifest.json in your extension folder
{
  "manifest_version": 3,
  "name": "X Quality Score",
  "version": "0.1.6",
  "description": "Shows the percentage of viewers who liked each post/reply on X (Twitter).",
  "icons": {"16": "icon16.png", "48": "icon48.png", "128": "icon128.png"},
  "content_scripts": [
    {
      "matches": [
        "https://x.com/*",
        "https://twitter.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "permissions": []
}